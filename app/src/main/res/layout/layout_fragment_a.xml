<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:tag="a">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/layout_fragment_a_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/main_button_selector"
            android:text="更换为BFragment"      android:textAllCaps="false"
            android:textSize="25sp" />

        <Button
            android:id="@+id/layout_fragment_a_button_textchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/main_button_selector"
            android:text="更换text的内容"
            android:textAllCaps="false"
            android:textSize="25sp" />
        <Button
            android:id="@+id/layout_fragment_a_button_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/main_button_selector"
            android:text="给Activity 传递消息"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/layout_fragment_a_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="我是AFragment"
                android:textAllCaps="false"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>