<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- android:visibility="visible"       设置可见状态-->
        <ProgressBar
            android:id="@+id/progress_bar_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <!--style="@style/Widget.AppCompat.ProgressBar.Horizontal"  设置风格
            有明确状态的进度条
            android:max="100"       最大进度
            android:progress="25"   当前进度
            android:secondaryProgress="40"  二级进度 视频在线播放时需要
        style="@style/Base.Widget.AppCompat.ProgressBar"        默认风格
        style="@android:style/Widget.ProgressBar"               默认android:style 风格

        android:progressDrawable="" 可以自定义样式
            -->
        <ProgressBar
            android:id="@+id/progress_bar_2"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="25"
            android:secondaryProgress="40" />
        <!--style="@android:style/Widget.Material.ProgressBar.Horizontal"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"  为相同效果-->
        <ProgressBar
            android:id="@+id/progress_bar_3"
            style="@android:style/Widget.Material.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="25" />
        <!--style="@android:style/Widget.ProgressBar.Horizontal" andorid5 之前的界面效果-->
        <ProgressBar
            android:id="@+id/progress_bar_4"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="25"
            android:secondaryProgress="40" />

        <Button
            android:id="@+id/progress_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/main_button_selector"
            android:text="模 拟 进 度"
            android:textSize="25sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="自 定 义 加 载 图 片"
            android:textSize="30sp" />

        <!--android:indeterminateDrawable="@drawable/background_progress"
        使用自定义的加载图片-->
        <ProgressBar
            android:id="@+id/progress_bar_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="25"
            android:indeterminateDrawable="@drawable/background_progress"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="自 定 义 style 样式"
            android:textSize="30sp" />

        <ProgressBar
            android:id="@+id/progress_bar_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="25"
            style="@style/myProgressBar"/>

        <Button
            android:id="@+id/progress_button_dialog_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Progress Dialog 1"
            android:textAllCaps="false"
            android:background="@drawable/main_button_selector"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/progress_button_dialog_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Progress Dialog 2"
            android:textAllCaps="false"
            android:background="@drawable/main_button_selector"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/progress_button_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="自定义Dialog custom"
            android:textAllCaps="false"
            android:background="@drawable/main_button_selector"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>
</ScrollView>